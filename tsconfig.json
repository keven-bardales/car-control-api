{
  "compilerOptions": {
    "target": "es2018",                
    "module": "commonjs",               
    "rootDir": "./src",               
    "outDir": "./dist",                
    "strict": true,        
    "sourceMap": true,             
    "noEmitOnError": true,             
    "esModuleInterop": true,           
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",                  
    "paths": {
      "@/*": ["src/*"],
      "@modules/shared/*": ["src/modules/shared/*"],               
    }
  },
  "include": ["src/**/*"],           
  "exclude": ["node_modules", "dist"] 
}
