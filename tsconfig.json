{
  "compilerOptions": {
    "target": "ES2016",                
    "module": "commonjs",               
    "rootDir": "./src",               
    "outDir": "./dist",                
    "strict": true,                     
    "noEmitOnError": true,             
    "esModuleInterop": true,           
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",                  
    "paths": {
      "@/*": ["src/*"]                
    }
  },
  "include": ["src/**/*"],           
  "exclude": ["node_modules", "dist"] 
}
